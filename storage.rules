
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Coincide con cualquier archivo en cualquier ruta
    match /{allPaths=**} {
      // Permite que cualquiera lea cualquier archivo.
      // Esto es necesario para que las imágenes de los autos y los logos sean visibles públicamente.
      allow read: if true;

      // Permite escribir (subir, actualizar, eliminar) solo si el usuario ha iniciado sesión.
      // Esto protege tu almacenamiento de subidas no autorizadas.
      allow write: if request.auth != null;
    }
  }
}
