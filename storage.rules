
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite la lectura pública de todos los archivos
    match /{allPaths=**} {
      allow read: if true;
    }

    // Permite la escritura pública solo en la carpeta 'brands'
    match /brands/{allPaths=**} {
      allow write: if true;
    }

    // Permite la escritura en la carpeta 'cars' solo si el usuario está autenticado
    match /cars/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
